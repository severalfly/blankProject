package com.leon.charpt1To10.charpt9;

public class ThreadDemo extends Thread
{
	private String name;

	public ThreadDemo()
	{
	}

	public ThreadDemo(String name)
	{
		this.name = name;
	}
	
	@Override
	public void run()
	{
		for(int i = 0; i < 20; ++i)
		{
			try
			{
				Thread.sleep(300);
			}
			catch (InterruptedException e)
			{
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			System.out.println(this.name + " " + i);
		}
	}
}
